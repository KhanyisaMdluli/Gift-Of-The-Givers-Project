@model WebApplication2KS.Models.Volunteer

@{
    ViewData["Title"] = "Create Volunteer";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-dark">Volunteer Today</h1>
        <p class="text-muted">Fill in the details to create your volunteer account.</p>
    </div>

    <!-- Form Card -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control rounded-3 shadow-sm" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EmailAddress" class="form-label fw-semibold"></label>
                            <input asp-for="EmailAddress" class="form-control rounded-3 shadow-sm" />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-dark rounded-3 shadow-sm">
                                ✅ Create Volunteer
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Back Link -->
            <div class="text-center mt-3">
                <a asp-action="Index" class="text-decoration-none text-muted">← Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Segoe UI', Roboto, sans-serif;
    }

    h1 {
        font-size: 2rem;
    }

    .form-control {
        border: 1px solid #d1d3d4;
        transition: all 0.2s ease-in-out;
    }

        .form-control:focus {
            border-color: #6c757d;
            box-shadow: 0 0 0 0.2rem rgba(108, 117, 125, 0.25);
        }

    .btn-dark {
        background-color: #343a40;
        border: none;
        font-size: 1rem;
        padding: 0.75rem;
        transition: all 0.2s ease-in-out;
    }

        .btn-dark:hover {
            background-color: #23272b;
        }
</style>
