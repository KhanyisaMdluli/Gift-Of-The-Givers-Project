@model WebApplication2KS.Models.Volunteer

@{
    ViewData["Title"] = "Volunteer Details";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-dark">👤 Your Volunteer Accounts</h1>
        <p class="text-muted">Here are the details of the selected volunteer.</p>
    </div>

    <!-- Details Card -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <h4 class="text-dark mb-3">Volunteer Information</h4>
                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-semibold text-secondary">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt class="col-sm-4 fw-semibold text-secondary">
                            @Html.DisplayNameFor(model => model.EmailAddress)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.EmailAddress)
                        </dd>

                        <dt class="col-sm-4 fw-semibold text-secondary">
                            @Html.DisplayNameFor(model => model.User)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.User.EmailAddress)
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@Model?.VolunteerId" class="btn btn-outline-primary rounded-3 shadow-sm">
                            ✏️ Edit
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-3 shadow-sm">
                            ← Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Segoe UI', Roboto, sans-serif;
    }

    h1 {
        font-size: 2rem;
    }

    .card {
        background-color: #fff;
    }

    dt {
        color: #6c757d;
    }

    .btn-outline-primary {
        border: 1px solid #0d6efd;
        color: #0d6efd;
    }

        .btn-outline-primary:hover {
            background-color: #0d6efd;
            color: #fff;
        }

    .btn-outline-secondary {
        border: 1px solid #6c757d;
        color: #6c757d;
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: #fff;
        }
</style>
