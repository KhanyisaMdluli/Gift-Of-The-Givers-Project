@model WebApplication2KS.Models.Volunteer

@{
    ViewData["Title"] = "Delete Volunteer";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-dark">⚠️ Delete Volunteer</h1>
        <p class="text-muted">Are you sure you want to permanently remove this volunteer account?</p>
    </div>

    <!-- Delete Confirmation Card -->
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <h4 class="text-dark mb-3">Volunteer Details</h4>
                    <dl class="row mb-4">
                        <dt class="col-sm-4 fw-semibold text-secondary">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-4 fw-semibold text-secondary">
                            @Html.DisplayNameFor(model => model.EmailAddress)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.EmailAddress)
                        </dd>
                        <dt class="col-sm-4 fw-semibold text-secondary">
                            @Html.DisplayNameFor(model => model.User)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.User.EmailAddress)
                        </dd>
                    </dl>

                    <form asp-action="Delete" class="d-flex justify-content-between">
                        <input type="hidden" asp-for="VolunteerId" />
                        <button type="submit" class="btn btn-danger rounded-3 shadow-sm">
                            🗑 Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-3 shadow-sm">
                            ← Back to List
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Segoe UI', Roboto, sans-serif;
    }

    h1 {
        font-size: 2rem;
    }

    .card {
        background-color: #fff;
    }

    dt {
        color: #6c757d;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        transition: all 0.2s ease-in-out;
    }

        .btn-danger:hover {
            background-color: #bb2d3b;
        }

    .btn-outline-secondary {
        border: 1px solid #6c757d;
        color: #6c757d;
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: #fff;
        }
</style>
