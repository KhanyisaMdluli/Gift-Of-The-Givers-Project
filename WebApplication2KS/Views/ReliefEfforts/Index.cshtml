@model IEnumerable<WebApplication2KS.Models.ReliefEffort>

@{
    ViewData["Title"] = "Relief Efforts";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-dark">Relief Efforts</h1>
        <p class="text-muted">Manage and track all ongoing and past relief efforts.</p>
    </div>

    <!-- Action Button -->
    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-success shadow-sm rounded-3">
            Create New Effort
        </a>
    </div>

    <!-- Table Card -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-dark text-white">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Title)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Date)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="table-light">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@Html.DisplayFor(modelItem => item.Title)</td>
                            <td class="text-muted">@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.EffortId"
                                   class="btn btn-sm btn-outline-primary rounded-3 me-2">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.EffortId"
                                   class="btn btn-sm btn-outline-secondary rounded-3 me-2">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.EffortId"
                                   class="btn btn-sm btn-outline-danger rounded-3">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Segoe UI', Roboto, sans-serif;
    }

    h1 {
        font-size: 2.2rem;
    }

    .card {
        background-color: #fff;
    }

    .table th {
        font-weight: 600;
        font-size: 0.95rem;
    }

    .table td {
        vertical-align: middle;
    }

    .btn {
        border-radius: 8px;
        font-size: 0.85rem;
        padding: 0.4rem 0.8rem;
    }

    .btn-success {
        background-color: #198754;
        border: none;
    }

        .btn-success:hover {
            background-color: #157347;
        }

    .btn-outline-primary:hover {
        background-color: #0d6efd;
        color: #fff;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: #fff;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: #fff;
    }
</style>
