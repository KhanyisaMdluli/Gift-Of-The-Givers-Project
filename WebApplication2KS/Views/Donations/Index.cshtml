@model IEnumerable<WebApplication2KS.Models.Donation>

@{
    ViewData["Title"] = "Donations";
}

<div class="page-header text-center mb-5">
    <h1 class="fw-bold text-dark">Donations Dashboard</h1>
    <p class="text-secondary">Track and manage all donations with ease.</p>
</div>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-dark shadow-sm">
        Make A Donation
    </a>
</div>

<div class="card shadow-sm rounded border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark text-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Amount)</th>
                        <th>@Html.DisplayNameFor(model => model.Date)</th>
                        <th>@Html.DisplayNameFor(model => model.Type)</th>
                        <th>@Html.DisplayNameFor(model => model.User)</th>
                        
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="table-light">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>💵 @Html.DisplayFor(modelItem => item.Amount)</td>
                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                            <td>@Html.DisplayFor(modelItem => item.Type)</td>
                            <td>@Html.DisplayFor(modelItem => item.User.EmailAddress)</td>
                            
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.DonationId"
                                   class="btn btn-sm btn-outline-secondary me-2">🔍 Details</a>
                                <a asp-action="Delete" asp-route-id="@item.DonationId"
                                   class="btn btn-sm btn-outline-danger">🗑 Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f1f3f5; /* soft grey background */
        font-family: 'Inter', 'Segoe UI', sans-serif;
    }

    .page-header h1 {
        font-size: 2.25rem;
        font-weight: 700;
    }

    .page-header p {
        font-size: 1rem;
        color: #6c757d;
    }

    .card {
        background: #ffffff;
        border-radius: 12px;
    }

    .table thead {
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
        transition: 0.2s ease;
    }

    .btn {
        border-radius: 6px;
        transition: all 0.2s ease;
    }

    .btn-dark {
        background-color: #343a40;
        border: none;
    }

        .btn-dark:hover {
            background-color: #212529;
        }

    .btn-outline-secondary {
        border: 1.5px solid #6c757d;
        color: #6c757d;
    }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: #fff;
        }

    .btn-outline-danger {
        border: 1.5px solid #dc3545;
        color: #dc3545;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: #fff;
        }
</style>
