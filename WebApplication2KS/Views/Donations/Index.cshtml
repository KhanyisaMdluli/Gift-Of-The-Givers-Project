@model IEnumerable<WebApplication2KS.Models.Donation>
@{
    ViewData["Title"] = "Donations Dashboard";
}

<div class="dashboard-container mb-5">
    <!-- Header Section -->
    <div class="dashboard-header">
        <div class="header-content">
            <h1 class="dashboard-title">
                <i class="fas fa-heart"></i>
                Donations Dashboard
            </h1>
            <p class="dashboard-subtitle">Manage and track all donations</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg">
            <i class="fas fa-plus"></i> New Donation
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-dollar-sign"></i>
            </div>
            <div class="stat-content">
                <h3>Total Amount</h3>
                <p class="stat-value">$@Model.Sum(d => d.Amount).ToString("N0")</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="stat-content">
                <h3>Total Donations</h3>
                <p class="stat-value">@Model.Count()</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-calendar"></i>
            </div>
            <div class="stat-content">
                <h3>Recent Donations</h3>
                <p class="stat-value">@Model.Where(d => d.Date >= DateTime.Now.AddDays(-30)).Count()</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="stat-content">
                <h3>Unique Donors</h3>
                <p class="stat-value">@Model.Select(d => d.User.EmailAddress).Distinct().Count()</p>
            </div>
        </div>
    </div>

    <!-- Donations Table -->
    <div class="table-container mb-5">
        <div class="table-header">
            <h2 class="table-title">
                <i class="fas fa-list"></i>
                Recent Donations
            </h2>
            <div class="table-actions">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search donations..." class="search-input">
                </div>
                <button class="btn btn-outline-primary">
                    <i class="fas fa-filter"></i> Filter
                </button>
            </div>
        </div>

        <div class="table-wrapper">
            <table class="dashboard-table">
                <thead>
                    <tr>
                        <th class="amount-col">
                            <span class="column-title">Amount</span>
                            <i class="fas fa-sort" data-sort="amount"></i>
                        </th>
                        <th class="type-col">
                            <span class="column-title">Type</span>
                            <i class="fas fa-sort" data-sort="type"></i>
                        </th>
                        <th class="date-col">
                            <span class="column-title">Date</span>
                            <i class="fas fa-sort" data-sort="date"></i>
                        </th>
                        <th class="user-col">
                            <span class="column-title">Donor</span>
                            <i class="fas fa-sort" data-sort="user"></i>
                        </th>
                        <th class="actions-col">
                            <span class="column-title">Actions</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderByDescending(d => d.Date))
                    {
                        <tr class="donation-row">
                            <td class="amount-cell">
                                <div class="amount-wrapper">
                                    <span class="amount-currency">$</span>
                                    <span class="amount-value">@item.Amount.ToString("N2")</span>
                                </div>
                            </td>
                            <td class="type-cell">
                                <span class="type-badge @GetTypeClass(item.Type)">
                                    @item.Type
                                </span>
                            </td>
                            <td class="date-cell">
                                <div class="date-display">
                                    <span class="date-full">@item.Date.ToString("MMM dd, yyyy")</span>
                                    <span class="date-time">@item.Date.ToString("HH:mm")</span>
                                </div>
                            </td>
                            <td class="user-cell">
                                <div class="user-info">
                                    <div class="user-avatar">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div class="user-details">
                                        <span class="user-email">@item.User.EmailAddress</span>
                                        <span class="user-id">ID: @item.User.UserId</span>
                                    </div>
                                </div>
                            </td>
                            <td class="actions-cell">
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@item.DonationId"
                                       class="btn btn-sm btn-outline-primary" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.DonationId"
                                       class="btn btn-sm btn-outline-info" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.DonationId"
                                       class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Empty State -->
        @if (!Model.Any())
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-inbox"></i>
                </div>
                <h3>No donations yet</h3>
                <p>Start by creating your first donation entry.</p>
                <a asp-action="Create" class="btn btn-primary">Create First Donation</a>
            </div>
        }
    </div>
</div>

@functions {
    public string GetTypeClass(string type)
    {
        return type?.ToLower() switch
        {
            "cash" => "badge-success",
            "check" => "badge-warning",
            "online" => "badge-primary",
            "in-kind" => "badge-info",
            _ => "badge-secondary"
        };
    }
}

