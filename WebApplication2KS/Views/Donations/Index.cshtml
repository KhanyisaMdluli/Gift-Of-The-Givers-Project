        }

    .btn-outline-info {
        background: transparent;
        color: var(--info-color);
        border: 1.5px solid var(--info-color);
    }

        .btn-outline-info:hover {
            background: var(--info-color);
            color: white;
        }

    .btn-outline-danger {
        background: transparent;
        color: var(--danger-color);
        border: 1.5px solid var(--danger-color);
    }

